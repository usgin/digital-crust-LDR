{
    "identifier": "20.500.12016/schema/register",
    "name": "Register schema",
    "description": "JSON schema derived from SKOS concept, used to define a register, which is a collection of items all sharing the same type, grouped together for some application.",
    "schema": {
        "type": "object",
        "title": "Register",
        "description": "JSON schema for representing register concepts with a preferred label, definition, source, and alternate labels scoped to some context",
        "properties": {
            "identifier": {
                "type": "string",
                "net.cnri.repository": {
                    "type": {
                        "autoGeneratedField": "handle"
                    }
                }
            },
            "prefLabel": {
                "type": "string",
                "title": "Name",
                "net.cnri.repository": {
                    "preview": {
                        "showInPreview": true,
                        "isPrimary": true
                    }
                }
            },
            "alternateLabels": {
                "type": "array",
                "title": "other designations for the register",
                "items": {
                    "type": "object",
                    "properties": {
                        "altLabel": {
                            "type": "string"
                        },
                        "altLabelContext": {
                            "type": "string"
                        }
                    }
                }
            },
            "description": {
                "type": "string",
                "format": "textarea",
                "title": "Definition",
                "net.cnri.repository": {
                    "preview": {
                        "showInPreview": true,
                        "excludeTitle": true
                    }
                }
            },
            "source": {
                "type": "string",
                "format": "textarea",
                "title": "Source of definition",
                "net.cnri.repository": {
                    "preview": {
                        "showInPreview": false,
                        "excludeTitle": true
                    }
                }
            },
            "related": {
                "type": "array",
                "title": "Related Registers",
                "items": {
                    "type": "string",
                    "net.cnri.repository": {
                        "type": {
                            "handleReference": {
                                "types": ["SKOSConcept"]
                            }
                        }
                    }
                }
            },
            "contentType": {
                "title":"Content type for items in this register",
                "type": "string",
                "description":"link to a registered DataObject that describes the data type for the register items. The data type is a dataObject based on fact that registered items are always JSON objects.",
                "net.cnri.repository": {
                    "type": {
                        "handleReference": {
                            "types": ["DataObject"]
                        }
                    }
                }
            },

            "creationDate": {
                "type": "string",
                "title": "Creation Date",
                "net.cnri.repository": {
                    "type": {
                        "autoGeneratedField": "creationDate"
                    }
                }
            },
            "modificationDate": {
                "type": "string",
                "title": "Modification Date",
                "net.cnri.repository": {
                    "preview": {
                        "showInPreview": true
                    },
                    "type": {
                        "autoGeneratedField": "modificationDate"
                    }
                }
            },
            "createdBy": {
                "type": "string",
                "title": "Created By",
                "net.cnri.repository": {
                    "type": {
                        "autoGeneratedField": "createdBy"
                    }
                }
            },
            "modifiedBy": {
                "type": "string",
                "title": "Modified By",
                "net.cnri.repository": {
                    "type": {
                        "autoGeneratedField": "modifiedBy"
                    }
                }
            }
        }
    }
}