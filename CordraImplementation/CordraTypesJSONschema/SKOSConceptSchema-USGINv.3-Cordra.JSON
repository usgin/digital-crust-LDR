{
    "type": "object",
    "title": "SKOSConcept",
    "description": "JSON schema for representing concepts with a preferred label, definition, source, membership in one or more vocabularies, and alternate labels scoped to some context",
    "properties": {
        "identifier": {
            "type": "string",
            "net.cnri.repository": {
                "type": {
                    "autoGeneratedField": "handle"
                }
            }
        },
        "prefLabel": {
            "type": "string",
            "title": "Name",
            "net.cnri.repository": {
                "preview": {
                    "showInPreview": true,
                    "isPrimary": true
                }
            }
        },
        "alternateLabels": {
            "type": "array",
            "title": "other designations for the concept",
            "items": {
                "type": "object",
                "properties": {
                    "altLabel": {
                        "type": "string"
                    },
                    "altLabelContext": {
                        "type": "string"
                    }
                }
            }
        },
        "description": {
            "type": "string",
            "format": "textarea",
            "title": "Definition",
            "net.cnri.repository": {
                "preview": {
                    "showInPreview": true,
                    "excludeTitle": true
                }
            }
        },
        "source": {
            "type": "string",
            "format": "textarea",
            "title": "Source of definition",
            "net.cnri.repository": {
                "preview": {
                    "showInPreview": false,
                    "excludeTitle": true
                }
            }
        },
        "memberOf": {
            "type": "array",
            "title": "Vocabulary(s) that the concept is a member of. Vocabularies are contingent groupings, as opposed to concept schemes that are intended to define a set of concepts partitioning or covering some specific concept space defined by a set of defining properties",
            "items": {
                "oneOf": [
                        {
                            "title": "External URI",
                            "description": "identifier for the concept scheme definition external to this repository.",
                            "type": "string",
                            "format": "uri"
                        },
                {"type": "string",
                "net.cnri.repository": {
                    "type": {
                        "handleReference": {
                            "types": [
                "ControlledVocabulary"
              ]
                        }
                    }
                }
            }
                    ]
        }
        },
        "inScheme":{
             "type":"object",
            "title":"Concept Scheme",
            "properties": {
                "dt:conceptSchemeLabel": {
                    "description": "free text label for humans to recognize the scheme in UI",
                    "title": "Concept Scheme Label",
                    "type": "string"
                },
                "dt:conceptSchemeURI": {
                    "description": "Identifier for the ConceptScheme",
                    "title": "Concept Scheme Identifier",
                    "oneOf": [
                        {
                            "title": "External URI",
                            "description": "identifier for the concept scheme definition external to this repository.",
                            "type": "string",
                            "format": "uri"
                        },
                        {
                            "title": "Concept Scheme in this repository",
                            "type": "string",
                            "net.cnri.repository": {
                                "type": {
                                    "handleReference": {
                                        "types": [
                                            "SKOS Concept"
                                        ]
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        },
        "broader": {
            "type": "array",
            "title": "Broader Concepts",
            "items": {
                "type": "string",
                "net.cnri.repository": {
                    "type": {
                        "handleReference": {
                            "types": [
                "SKOSConcept"
              ]
                        }
                    }
                }
            }
        },
        "narrower": {
            "type": "array",
            "title": "Narrower Concepts",
            "items": {
                "type": "string",
                "net.cnri.repository": {
                    "type": {
                        "handleReference": {
                            "types": [
                "SKOSConcept"
              ]
                        }
                    }
                }
            }
        },
        "related": {
            "type": "array",
            "title": "Related Concepts",
            "items": {
                "type": "string",
                "net.cnri.repository": {
                    "type": {
                        "handleReference": {
                            "types": [
                "SKOSConcept"
              ]
                        }
                    }
                }
            }
        },
        "creationDate": {
            "type": "string",
            "title": "Creation Date",
            "net.cnri.repository": {
                "type": {
                    "autoGeneratedField": "creationDate"
                }
            }
        },
        "modificationDate": {
            "type": "string",
            "title": "Modification Date",
            "net.cnri.repository": {
                "preview": {
                    "showInPreview": true
                },
                "type": {
                    "autoGeneratedField": "modificationDate"
                }
            }
        },
        "createdBy": {
            "type": "string",
            "title": "Created By",
            "net.cnri.repository": {
                "type": {
                    "autoGeneratedField": "createdBy"
                }
            }
        },
        "modifiedBy": {
            "type": "string",
            "title": "Modified By",
            "net.cnri.repository": {
                "type": {
                    "autoGeneratedField": "modifiedBy"
                }
            }
        }
    }
}